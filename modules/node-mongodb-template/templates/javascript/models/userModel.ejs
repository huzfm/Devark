import mongoose from "mongoose";

//basic user schema with name, email, and createdAt fields
const userSchema = new mongoose.Schema({
name: {
type: String,
required: true,
trim: true
},
email: {
type: String,
required: true,
unique: true
},
createdAt: {
type: Date,
default: Date.now
}
});

export default mongoose.model("User", userSchema);